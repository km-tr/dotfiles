# environment variables
export EDITOR=vim

export HISTSIZE=10000
export SAVEHIST=10000

export ANDROID_HOME=$HOME/Library/Android/sdk
path+=($ANDROID_HOME/emulator)
path+=($ANDROID_HOME/platform-tools)

export GOPATH=$HOME/go
path+=($GOPATH/bin)

export BUNPATH=$HOME/.bun
path+=($BUNPATH/bin)

path+=$HOME/.local/bin

path+=/opt/homebrew/opt/protobuf@3/bin
path+=/opt/homebrew/opt/postgresql@15/bin

# eval
eval "$(/opt/homebrew/bin/brew shellenv)"

eval "$(sheldon source)"

eval "$(/opt/homebrew/bin/mise activate zsh)"

eval "$(zoxide init zsh)"

source <(fzf --zsh)

source /opt/homebrew/share/zsh-abbr/zsh-abbr.zsh

# abbreviations
abbr tis='tig status'

abbr dc='docker compose'

abbr gcmf='git commit -m "feat:'
abbr gcmfi='git commit -m "fix:'
abbr gcmd='git commit -m "docs:'
abbr gcms='git commit -m "style:'
abbr gcmr='git commit -m "refactor:'
abbr gcmp='git commit -m "perf:'
abbr gcmt='git commit -m "test:'
abbr gcmb='git commit -m "build:'
abbr gcmci='git commit -m "ci:'
abbr gcmc='git commit -m "chore:'
abbr gcmrv='git commit -m "revert:'

abbr cm='chezmoi'

abbr brwe="brew"
abbr bbd="brew bundle dump --global --force"


# The next line updates PATH for the Google Cloud SDK.
if [ -f "$HOME/google-cloud-sdk/path.zsh.inc" ]; then . "$HOME/google-cloud-sdk/path.zsh.inc"; fi

# The next line enables shell command completion for gcloud.
if [ -f "$HOME/google-cloud-sdk/completion.zsh.inc" ]; then . "$HOME/google-cloud-sdk/completion.zsh.inc"; fi


cdgw() {
    cd "$(git worktree list | fzf | awk '{print $1}')"
}